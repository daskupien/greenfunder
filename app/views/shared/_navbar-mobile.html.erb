<div class="navbar navbar-expand-sm navbar-light sticky-top">
  <%= link_to "/", class: "navbar-brand" do %>
    <%= cl_image_tag("https://res.cloudinary.com/rentmylife/image/upload/v1614698393/logo_aghnot.png") %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "AboutUs", "#", class: "nav-link" %>
      </li>

      <div class="dropdown nav-item">
        <button type="button" class="btn dropdown-toggle dropdown-button" data-toggle="dropdown">
          Categories
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="#">Animal</a>
          <a class="dropdown-item" href="#">Trees</a>
          <a class="dropdown-item" href="#">Plastic</a>
        </div>
      </div>

      <li class="nav-item">
        <%= link_to "Community", "#", class: "nav-link" %>
      </li>

      <li class="nav-item">
        <%= link_to "Support", "#", class: "nav-link" %>
      </li>

      <% if user_signed_in? %>
        <li class="nav-item dropdown" id="avatar-items">
          <%= link_to current_user.first_name, user_path(current_user), class: "nav-link username" %>

          <% if current_user.photo.attached? %>
            <%= link_to cl_image_tag(current_user.photo.key, :height=>40), user_path(current_user), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= link_to cl_image_tag("https://res.cloudinary.com/rentmylife/image/upload/v1614335184/kisspng-computer-icons-person-avatar-download-person-icon-5b480703d1f604.21741917153144704386_foan5y.png", :height=>40), user_path(current_user), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My Account", "#", class: "dropdown-item" %>
            <%= link_to "Log out", "#", class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="btn-normal-white-nav log-in">
          <%= link_to "Log in", new_user_session_path, class: "nav-link", data: { turbolinks: false } %>
        </li>
        <li class="btn-normal-green-nav resister">
          <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
        </li>
      <% end %>

    </ul>
  </div>
</div>
