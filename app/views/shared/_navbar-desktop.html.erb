
<div class="navbar positon-fixed navbar-expand-sm">
  <div class="d-flex justify-content-start taps">
    <%= link_to "/", class: "navbar-brand" do %>
      <%= cl_image_tag("https://res.cloudinary.com/rentmylife/image/upload/v1614698393/logo_aghnot.png") %>
    <% end %>

    <div class="dropdown nav-item">
      <button type="button" class="btn dropdown-toggle dropdown-button" data-toggle="dropdown">
        Categories
      </button>
      <div class="dropdown-menu">
        <p class="dropdown-item d-flex"><i class="fas fa-seedling category-dropdown-icon"></i><%= link_to "Planting", "/projects?query=planting", class: "nav-link category-dropdown-link" %></p>
        <p class="dropdown-item d-flex"><i class="fas fa-solar-panel category-dropdown-icon"></i><%= link_to "Energy", "/projects?query=energy", class: "nav-link category-dropdown-link" %></p>
        <p class="dropdown-item d-flex"><i class="fab fa-forumbee category-dropdown-icon"></i><%= link_to "Animals", "/projects?query=animals", class: "nav-link category-dropdown-link" %></p>
        <p class="dropdown-item d-flex"><i class="fas fa-box-open category-dropdown-icon"></i><%= link_to "Plastic alternatives", "/projects?query=plastic+alternatives", class: "nav-link category-dropdown-link" %></p>

      </div>
    </div>


    <li class="nav-item">
        <%= link_to "About Us", "#", class: "nav-link" %>
    </li>

    <li class="nav-item">
      <%= link_to "Create Project", new_project_path, class: "nav-link" %>
    </li>
  </div>

   <div class="d-flex justify-content-end account">
    <% if user_signed_in? %>
      <li class="nav-item dropdown" id="avatar-items">
        <%= link_to current_user.first_name, user_path(current_user), class: "nav-link username" %>

        <% if current_user.photo.attached? %>
          <%= link_to cl_image_tag(current_user.photo.key, :height=>40), user_path(current_user), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
          <%= link_to cl_image_tag("https://res.cloudinary.com/rentmylife/image/upload/v1614335184/kisspng-computer-icons-person-avatar-download-person-icon-5b480703d1f604.21741917153144704386_foan5y.png", :height=>40), user_path(current_user), class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Account", user_path(current_user), class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, :method => :delete, class: "dropdown-item" %>
        </div>
      </li>

    <% else %>
      <li class="btn-normal-white-nav log-in">
        <%= link_to "Log in", new_user_session_path, class: "nav-link", data: { turbolinks: false } %>
      </li>
      <li class="btn-normal-green-nav register">
        <%= link_to "Register", new_user_registration_path, class: "nav-link" %>
      </li>
    <% end %>
  </div>
</div>
