<div class="projectcontent">
<div class="projectcards">
  <% @projects.each do |project| %>
    <div class="progress">
      <% current_investment_sum = project.current_investment_sum
      investment_goal = project.investment_goal
      @investement_percentage = current_investment_sum.to_f / investment_goal * 100.0 %>
      <div class="progress-bar bg-success" role="progressbar" style="width: <%= @investement_percentage %>%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="card-product">
      <%= link_to cl_image_tag(project.image.key, :height=>40), user_path(current_user), id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
    <div class="card-product-infos">
      <h2><%= project.name %></h2>
      <p><%= project.punchline %></p>
      <p><%= project.address %></p>
      <p>Goal: <%= project.investment_goal %>â‚¬</p>
     </div>
   </div>
  <% end %>
</div>
  <div id="map"
      style="width: 50%; height: 100vh; position: sticky; top:0; right:0"
