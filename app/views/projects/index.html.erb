<div class="container-wide">
<div class="projectcontent">
  <div class="cards-projects">

    <%# SEARCH BAR %>
    <%# deleted class 'searchbar' for now, so it is a own row %>
    <div class="">
      <%= form_tag projects_path, class: "search-form", method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "search-input",
          placeholder: "Search for category..."
        %>
        <%= button_tag(type: "submit", class: "btn btn-default") do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>

    <h1 style="padding: 78px 109px 30px 30px;">Check out our awesome projects <br> and make the first move for the planet!</h1>

    <%# PROJECTS %>
    <% @projects.each do |project| %>
      <div class="card-project">
        <%= link_to cl_image_tag(project.image.key), user_path(current_user), class: "card-project-image", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="card-project-body">
          <h2 class="card-project-title"><%= project.name %></h2>
          <p class="card-project-punchline"><%= project.punchline %></p>
          <p class="card-project-address"><%= project.address %></p>
          <p class="card-project-goal">Goal: <%= project.investment_goal %>â‚¬</p>
          <div class="card-project-progress">
            <% current_investment_sum = project.current_investment_sum
            investment_goal = project.investment_goal
            @investement_percentage = current_investment_sum.to_f / investment_goal * 100.0 %>
            <div class="project-progress">
              <div class="progress">
                <div class="progress-bar"
                      role="progressbar"
                      style="width: <%= @investement_percentage %>%"
                      aria-valuenow="25"
                      aria-valuemin="0"
                      aria-valuemax="100">
                </div>
              </div>
            </div>
           </div>
           <%= link_to "Invest now", project_path(project), class: "btn-card-project" %>
        </div>
      </div>
    <% end %>
  </div>
  <div id="map"
       style="width: 45%; height: 100vh; margin-right: 0;"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="pk.eyJ1Ijoiam9ubmFzc29uIiwiYSI6ImNrbHRjNWw0MTE3a2wyb2xsZTZkbzN1cHEifQ.Bn8A3OsroPo72zNpSH5LxA">
  </div>
  
</div>
</div>
