<div class="container-wide">
  <div class="container-general">

    <div class="devise-content container">
      <div class="row">
        <div class="col-12 col-md-6 offset-md-3">

          <div class="devise-header">
            <h2>Log In</h2>
          </div>

          <div class="devise-form">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", :style=> 'width: 100%' } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password", :style=> 'width: 100%' } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
          </div>

              <div class="form-actions devise-button">
                <%= f.button :submit, "Log In", class: "btn-normal-white w-100" %>
              </div>
            <% end %>

          <div class="shared-links">
            <p>Not yet a Member? No Password?</p>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
